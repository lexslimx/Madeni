@page "/"
@using Madeni.Shared.Dtos
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@using System.Globalization
@inject HttpClient Http
@attribute [Authorize]
@inject AuthenticationStateProvider AuthenticationStateProvider
<PageTitle>Home</PageTitle>

<h4>Overview</h4>

@if (DashboardDto == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
       <small>You have earned KES @DashboardDto.IncomeTotal.ToString("C", CultureInfo.CreateSpecificCulture("en-KE")) and spent KES @DashboardDto.ExpenseTotal.ToString("C", CultureInfo.CreateSpecificCulture("en-KE")) so far, damn!</small> 
    </div>
    <div class="row">
        <div class="card col-md-3 border-success">
            <div class="card-title">
                <h5 class="card-title"></h5>
            </div>
            <div class="card-body">
                <p class="card-text">@DashboardDto.IncomeTotal.ToString("C", CultureInfo.CreateSpecificCulture("en-KE"))</p>
                <h6 class="card-subtitle mb-2 text-muted">Balance: @DashboardDto.Balance.ToString("C", CultureInfo.CreateSpecificCulture("en-KE"))</h6>
                 <small>Incomes</small>
                 
            </div>
            <div class="card-footer">
                <a href="addincome" class="btn-outline-dark btn-sm">
                    <span class="oi oi-plus text-success" title="add" aria-hidden="true"></span>
                </a>
                <a href="incomes" class="btn-outline-dark btn-sm">
                   <span class="oi oi-list text-success" title="add" aria-hidden="true"></span>
                </a>
            </div>
        </div>
        <div class="card col-md-3 border-dark">
            <div class="card-title">
                <h5 class="card-title"></h5>
            </div>
            <div class="card-body">
                <p class="card-text">@DashboardDto.ExpenseTotal.ToString("C", CultureInfo.CreateSpecificCulture("en-KE"))</p>
                <small>Expenses</small>
            </div>
            <div class="card-footer bg-white">
                <a href="addexpense" class="btn-outline-dark btn-sm">
                    <span class="oi oi-plus text-success" title="add" aria-hidden="true"></span>
                </a>
                <a href="expenses" class="btn-outline-dark btn-sm">
                    <span class="oi oi-list text-success" title="add" aria-hidden="true"></span>
                </a>
            </div>
        </div>
        <div class="card col-md-3 border-warning">
            <div class="card-title">
                <h5 class="card-title"></h5>
            </div>
            <div class="card-body">
                <h6 class="card-subtitle mb-2 text-muted"></h6>
                <p class="card-text">@DashboardDto.LoanTotal.ToString("C", CultureInfo.CreateSpecificCulture("en-KE"))</p>
                <h6 class="card-subtitle mb-2 text-muted">Outstanding: @((DashboardDto.LoanTotal - DashboardDto.RepaymentsTotal).ToString("C", CultureInfo.CreateSpecificCulture("en-KE")))</h6>
                <small>Loans</small>
            </div>
            <div class="card-footer bg-white">
                <a href="addloan" class="btn-outline-dark btn-sm">
                    <span class="oi oi-plus text-success" title="add" aria-hidden="true"></span>
                </a>
                <a href="loans" class="btn-outline-dark btn-sm">
                    <span class="oi oi-list text-success" title="add" aria-hidden="true"></span>
                </a>
            </div>
        </div>
        <div class="card col-md-3 border-info">
            <div class="card-title">
                <h5 class="card-title"></h5>
            </div>
            <div class="card-body">
                <p class="card-text">@DashboardDto.RepaymentsTotal.ToString("C", CultureInfo.CreateSpecificCulture("en-KE"))</p>
                <small>Repayments</small>
            </div>
            <div class="card-footer m-0 bg-white">
                <a href="repayments" class="btn-outline-dark btn-sm">
                    <span class="oi oi-list text-success" title="add" aria-hidden="true"></span>
                </a>
            </div>
        </div>
    </div>
    //https://github.com/mariusmuntean/ChartJs.Blazor
}
@code {
    private DashboardDto? DashboardDto;
    protected override async Task OnInitializedAsync()
    {
        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            var userId = user.Claims.Where(x => x.Type == "sub").Select(x => x.Value).FirstOrDefault();
            DashboardDto = await Http.GetFromJsonAsync<DashboardDto>("/api/Dashboard?userId=" + userId);
        }
        catch (AccessTokenNotAvailableException exception)
        {
            exception.Redirect();
        }
    }
}


